<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/cardFragment">

    <fragment
        android:id="@+id/cardFragment"
        android:name="com.example.bnetest.presentation.CardFragment"
        android:label="@string/title_name"
        tools:layout="@layout/fragment_card">
        <action
            android:id="@+id/action_cardFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.bnetest.presentation.DetailsFragment">
        <argument
            android:name="drugs"
            app:argType="com.example.bnetest.data.Drugs" />

    </fragment>
</navigation>